            </LinearLayout>
            <!-- FIRST ROW END -->


            <!-- SECOND ROW START -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight=".1" >

                <HorizontalScrollView
                    android:id="@+id/hsv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:scaleType="fitXY" >

                        <ImageView
                            android:id="@+id/apl1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/apl1" />

                        <ImageView
                            android:id="@+id/apl2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/apl2" />

                        <ImageView
                            android:id="@+id/apl3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/apl3" />

                        <ImageView
                            android:id="@+id/apl4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/apl4" />

                        <ImageView
                            android:id="@+id/apl5"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/apl5" />

